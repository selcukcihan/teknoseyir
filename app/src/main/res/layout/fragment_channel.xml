        <fragment
            class="com.selcukcihan.android.teknoseyir.VideoFragment"
            android:id="@+id/video_fragment_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
-->
    </LinearLayout>

</LinearLayout>